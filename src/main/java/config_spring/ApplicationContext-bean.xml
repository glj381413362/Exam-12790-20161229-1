<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!--start model -->
	<bean name="film" class="com.model.Film"></bean>
	<!--end model -->

	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>format</value>
				<value>exceptions</value>
				<value>windows</value>
			</list>
		</property>
	</bean>
 <!-- let's inject the above MessageSource into this POJO -->
   <!--  <bean id="example" class="com.Example">
        <property name="messages" ref="messageSource"/>
    </bean>
 -->


	<!-- ===================================start dao层 ===================================== -->
	<!-- <bean name="filmDao" class="com.dao.FilmDao"></bean> -->
	<!-- ===================================end dao层 ===================================== -->



	<!-- ===================================start event层 ===================================== -->

	<bean name="applicationStartEvent" class="com.event.StartConEvent"></bean>
	<bean name="applicationStopEvent" class="com.event.StopConEvent"></bean>
	<!-- 监听者 -->
	<bean id ="addFilmNotifier" class="com.event.AddFilmNotifier"></bean>

	<!-- ===================================end event层 ===================================== -->



	<!-- ===================================start Service层 ===================================== -->
	<bean id="filmServiceImpl" class="com.service.impl.FilmServiceImpl"
		autowire="byType"></bean>
	<!-- ===================================end Service层 ===================================== -->


</beans>